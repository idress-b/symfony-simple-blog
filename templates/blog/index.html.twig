{% extends 'base.html.twig' %}
{% block title %}Objectif Développeur | page d'accueil
{% endblock %}
{% block body %}
	{% if app.request.get('page') == 1 or
app.request.get('page') == null %}

		<div class="p-0 m-0 mx-auto banner">
			<div class="container text-center">
				<img class="img-fluid w-100" src="img/banner.jpg" alt="bannière">
			</div>
		</div>


	{% endif %}


	<div class="container">
		<div class="row mt-4">
			{% if app.request.get('page') == 1 or
app.request.get('page') == null %}

				<h1 class="text-center text-lg-start ms-lg-5 my-4 h3">{{ heading }}</h1>
				{% endif%}
				<div class=" order-1 order-lg-0 col-12 col-lg-9">
					{% for post in posts %}
						<a class="link-neutral" href="{{ path('blog_read', { id: post.id }) }}">
							<div class="m-3 ">
								<article class="article-grid mx-xl-4">
									<div class="custom-card">
										<div class="d-flex align-items-center">
											<img class='rounded-circle m-2' width="32" heigh='32' src="{{ post.author.getAvatarUrl }}" alt="{{post.author}}">
											<small>écrit par
												<strong>{{ post.author.pseudo }}</strong>
												le
												{{ post.publishedAt | date('d/m/Y')}}
											</small>
										</div>
										<div class="d-flex flex-column-reverse flex-lg-row">
											<div class="flex-grow-1">
												<div class="px-3">
													<h2 class="card-title mt-2 fs-4">
														<b>{{ post.title }}</b>
													</h2>

													{% for tag in post.tags %}
														<a class="text-decoration-none text-dark" href="{{path("app_tag",{id: tag.id})}}">
															<span class="hashtag">{{ tag }}</span>
														</a>
													{% endfor %}

													<p class="card-text pb-0">{{ post.content| slice(0,200) |raw  }}...</p>
													<p>
														<small>{{ post.validComments | length }}
															Commentaires</small>
													</p>
												</div>

											</div>
											<div class="align-self-center me-3 pb-3">
												{% if post.image%}
													<img src="{{ post.getImageUrl }}" width="180" class=" img-fluid" alt="..."/>
												{% endif %}
											</div>
										</div>
									</div>
								</article>
							</div>
						</a>
					{% endfor %}
					{{ knp_pagination_render(posts) }}
				</div>
				<div class=" order-0 order-lg-1 col-lg-3 right-sidebar mt-3">
					<div
						class="sticky-container">
						<!--------------------- Formulaire de recherche   ------------------------------->
						<div class="mb-4 mx-3 mx-lg-0 p-3 border  bg-white rounded-2">
							{{ form_start(form) }}

							{{ form_row(form.string) }}

							<button type="submit" class="btn btn-primary w-100">Recherche</button>
							{{ form_end(form) }}

						</div>
						<!--------------------- Tags populaires  ------------------------------->
						<div class="mb-4 mx-3 mx-lg-0 p-3 border  bg-white rounded-2">
							<p class="fw-bold">Tags populaires</p><hr>
							{% for tag in tags %}
								<a class="text-decoration-none text-dark" href="{{path("app_tag",{id: tag.id})}}">
									<span class="hashtag">{{tag}}</span>
								</a>
							{% endfor %}
						</p>
					</div>

					<div class="d-none d-lg-block">
						<img class="img-fluid w-100 rounded-2 " src="img/job_board.jpg" alt="offres d'emploi">
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
