{% extends 'account/baseAdmin.html.twig' %}

{% block content_title 'Gestion du profil' %}

{% block body %}
	<div class="container max-800 ">
		<h1 class="my-5 text-center">Gestion de votre profil</h1>
		<img src="/img/{{ avatar }}" id="img-avatar" class="rounded-circle d-inline m-auto" width="150" height="150" alt="">
		<a class="btn btn-danger" href="{{ path('profil_delete') }}">
			<i class="fa-solid fa-trash-can"></i>Supprimer la photo</a>
		{{ form_start(form) }}
		{{ form_row(form.file) }}
		{{ form_row(form.pseudo) }}
		{{ form_row(form.titre) }}
		{{ form_row(form.bio) }}
		<button type="submit" class="w-100  my-5 btn btn-primary">Enregistrer les modifications</button>
		{{ form_end(form) }}
	</div>

	<script src="{{ asset('js/avatar.js') }}"></script>
{% endblock %}
